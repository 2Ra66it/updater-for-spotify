<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/general">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="autoOrigin"
            android:title="@string/xml_enable_notification"
            android:summary="@string/xml_notification_text_origin" />


        <CheckBoxPreference
            android:defaultValue="true"
            android:key="autoDf"
            android:title="@string/xml_enable_notification_dogfood"
            android:summary="@string/xml_notification_text_dogfood" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="downloadBeta"
            android:title="@string/xml_download_beta_title"
            android:summary="@string/xml_download_beta_text" />


    </PreferenceCategory>


    <PreferenceCategory android:title="@string/about">
        <Preference
            android:icon="@drawable/ic_paypal"
            android:key="donatePref"
            android:title="@string/donate"
            android:summary="@string/xml_donate_paypal">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/xml_paypal_link" />
        </Preference>

        <Preference
            android:icon="@drawable/ic_xda"
            android:key="xdaPref"
            android:title="@string/xml_dogfood_title"
            android:summary="@string/xml_dogfood_text">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://forum.xda-developers.com/android/apps-games/mod-spotify-dogfood-ad-free-spotify-t3632423/" />
        </Preference>

        <Preference
            android:icon="@drawable/ic_telegram"
            android:key="tgPref"
            android:title="Telegram Group"
            android:summary="Telegram group users of Spotify Dogfood">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/spotifydogfood" />
        </Preference>


        <Preference
            android:icon="@drawable/ic_github"
            android:key="githubPref"
            android:title="@string/github"
            android:summary="@string/xml_see_on_github">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/xml_github_link"/>
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>